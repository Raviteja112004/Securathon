<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CyberGuard Training Platform</title>
     <link rel="stylesheet" href="style.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="icon" href="/favicon.ico" type="image/x-icon" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <script src="../public/script.js"></script>
</head>
<body class="dark-mode">
 <!-- Navigation -->
    <nav>
        <div class="logo">
            <i class="fas fa-shield-alt"></i>
            <span>CyberGuard</span>
        </div>
        <div class="nav-links">
            <a href="#dashboard" class="active"><i class="fas fa-home"></i> Dashboard</a>
            <a href="/training"><i class="fas fa-graduation-cap"></i> Training</a>
            <a href="/lab"><i class="fas fa-flask"></i> Cyber Lab</a>
            <a href="/quiz"><i class="fas fa-tasks"></i> Quests</a>
            <a href="/community"><i class="fas fa-newspaper"></i> News</a>
             <a href="/team-selection"><i class="fas fa-users"></i> Team Hub</a>
            <a href="{{{form}}}">{{content}}</a>
        </div>
        <div class="user-profile">
            <img src="/api/placeholder/40/40" alt="User Avatar" class="avatar">
            <span class="username">{{name}}</span>
            <span class="level">Level 12</span>
        </div>
        <button class="mobile-menu-btn">
            <i class="fas fa-bars"></i>
        </button>
    </nav>


    <!-- Main Content -->
    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
       <div class="team-hub-container red-theme">
                <div class="team-header">
                    <h1><i class="fas fa-dragon"></i> Red Team Operations</h1>
                    <div class="team-stats">
                        <span>Team Rank: Elite</span>
                        <span>Active Operations: 3</span>
                        <span>Success Rate: 78%</span>
                    </div>
                </div>

                <div class="hub-grid">
                    <!-- Active Operations -->
                    <div class="card operations-card">
                        <h2>Active Operations</h2>
                        <div class="operation-list">
                            <div class="operation">
                                <h3>Operation Shadow Strike</h3>
                                <p>Practice advanced persistence techniques</p>
                                <div class="progress-bar">
                                    <div class="progress" style="width: 45%">45%</div>
                                </div>
                                <button class="btn-primary">Continue Operation</button>
                            </div>
                        </div>
                    </div>

                    <!-- Attack Vector Library -->
                    <div class="card vector-library">
                        <h2>Attack Vector Library</h2>
                        <div class="vector-grid">
                            <div class="vector-item">
                                <i class="fas fa-bug"></i>
                                <span>Exploit Development</span>
                            </div>
                            <div class="vector-item">
                                <i class="fas fa-user-ninja"></i>
                                <span>Social Engineering</span>
                            </div>
                            <div class="vector-item">
                                <i class="fas fa-network-wired"></i>
                                <span>Network Infiltration</span>
                            </div>
                        </div>
                    </div>

                    <!-- Training Scenarios -->
                    <div class="card scenarios-card">
                        <h2>Training Scenarios</h2>
                        <div class="scenario-list">
                            <div class="scenario">
                                <h3>Corporate Network Breach</h3>
                                <p>Difficulty: Advanced</p>
                                <button class="btn-primary">Start Scenario</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </main>

    <footer class="bg-white shadow-md py-8 w-full mt-12">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
            <p class="text-gray-500">Â© 2024 CyberGuard. All rights reserved.</p>
        </div>
    </footer>

    <script>
        // Toggle mobile menu
        document.querySelector('.mobile-menu-btn').onclick = function () {
            const navLinks = document.querySelector('.nav-links');
            navLinks.classList.toggle('hidden');
        };
    </script>
</body>
</html>
